{
    "yaml": {
        "validate": true,
        "enable": true,
        "completion": true,
        "format": {
            "enable": true
        }
    },
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--skip-string-normalization"],
    "coc.preferences.formatOnSaveFiletypes": ["python", "javascript", "terraform", "yaml"],
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": ["serve"],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {},
            "settings": {}
        }
    },
    "eslint.autoFixOnSave": true
}
